
@{
    ViewBag.Title = "XemChiTietSanPham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Xem Chi Tiết Sản Phẩm</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="@Url.Action("Index","Home")">Trang Chủ</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Chi Tiết Sản Phẩm</p>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Shop Detail Start -->
<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 pb-5">
            <div class="carousel-item active">
                <img class="w-100 h-100" src="~/Asset/img/@Model.AnhBia" alt="Image">
            </div>
           
        </div>

        <div class="col-lg-7 pb-5">
            <h1 class="font-weight-semi-bold" style=" color:lightpink">@Model.TenSP</h1>
           
            <h3 class="font-weight-semi-bold mb-4" style=" color:sandybrown">@Model.GiaBan VNĐ</h3>
            <h5 class="font-weight-semi-bold mb-4">Số lượng: @Model.SoLuongTon</h5>
            <p class="mb-4">Mô tả: @Model.MoTa</p>
            <div class="d-flex mb-3">
               
            </div>
           
            <div class="d-flex align-items-center mb-4 pt-2">
                <div class="input-group quantity mr-3" style="width: 130px;">
                    <div class="input-group-btn">
                        <button class="btn btn-primary btn-minus">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                    <input type="text" class="form-control bg-secondary text-center" value="1">
                    <div class="input-group-btn">
                        <button class="btn btn-primary btn-plus">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
                <a href="@Url.Action("ThemGioHang", "GioHang", new { masp = Model.MaSP, strUrl = Request.Url.ToString()})" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ hàng</a>
            </div>
           
        </div>
    </div>
    <div class="row px-xl-5">
       
</div>
    </div>
<!-- Shop Detail End -->
<!-- Products Start -->

<!-- Products End -->
