@using VACTShop.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SANPHAM>
@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_CuaHangLayout.cshtml";
}

@foreach (var sp in Model)
{
    <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
        <div class="card product-item border-0 mb-4">
            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                <img class="img-fluid w-100" src="~/Asset/img/@sp.AnhBia" alt="">
            </div>
            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                <h6 class="text-truncate mb-3">@sp.TenSP</h6>
                <div class="d-flex justify-content-center">
                    <h6>@sp.GiaBan VNĐ</h6>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between bg-light border">
                <a href="@Url.Action("XemChiTietSanPham","Home", new { id = sp.MaSP })" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Chi tiết</a>
                <a href="@Url.Action("ThemGioHang", "GioHang", new { masp = @sp.MaSP, strUrl = Request.Url.ToString()})" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ hàng</a>
            </div>
        </div>
    </div>
}
