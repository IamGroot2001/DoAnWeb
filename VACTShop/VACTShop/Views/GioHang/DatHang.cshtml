                                <input type="radio" class="custom-control-input" name="payment" id="banktransfer">
                                <label class="custom-control-label" for="banktransfer">Bank Transfer</label>
                            </div>
                        </div>
                    </div>*@
                    <div class="card-footer border-secondary bg-transparent">
                        @using (Html.BeginForm())
                        { 
                            <input type="submit" class="btn btn-block btn-primary my-3 py-3" value="Thanh Toán Khi Nhận Hàng" />
                            <a class="btn btn-block btn-primary my-3 py-3" href="@Url.Action("Payment","GioHang")">Thanh Toán Bằng Ví Momo</a>
                            <a class="btn btn-block btn-primary my-3 py-3" href="@Url.Action("PaymentVNPAY","GioHang")"><img  src="~/Asset/img/cart.jpg" width="7%"/>Thanh Toán Bằng VNpay</a>
                        }
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Checkout End -->

