@model VACTShop.Models.DONDATHANG

@{
    ViewBag.Title = "SuaDonDatHang";
    Layout = "~/Views/Layout/Admin/_LayoutAdmin.cshtml";
}

<style>
    .col-md-10 {
        color: black
    }

    h2 {
        font-size: 26px;
    }

    input, textarea {
        color: #000000;
        outline: none;
        font-size: .9em;
        padding: 1em 3em 1em 1em;
        border: none;
        margin-bottom: 20px;
        margin-top: 10px;
        background: rgba(255, 255, 255, 0.85);
        width: 62%;
        color: #000;
        border-radius: 30px;
        font-weight: 400;
        font-family: 'Open Sans', sans-serif;
        letter-spacing: 1px;
        text-align: center;
    }

    .form-horizontal {
        text-align: center;
        justify-content: center
    }

    .btn {
        margin-left: 20%;
        margin-top: 1%;
        color: white;
        background: #d2527f;
        border: none;
        padding: .7em 20px;
        outline: none;
        width: 20%;
        font-size: 1em;
        cursor: pointer;
        letter-spacing: 1px;
        font-weight: 400;
        font-family: 'Open Sans', sans-serif;
        transition: 0.5s all;
        -webkit-transition: 0.5s all;
        -o-transition: 0.5s all;
        -moz-transition: 0.5s all;
        -ms-transition: 0.5s all;
        border-radius: 30px;
        float: left;
    }

        .btn:hover {
            color: #d2527f;
            background: white;
        }

    

    @@media(max-width: 1040px) {
        .return {
            margin-left: 28%;
            padding: 0.7em 135px;
            margin-top: 0px;
            width: 44%;
        }
    }

    @@media(max-width: 780px) {


        .return {
            margin-left: 28%;
            padding: 0.7em 75px;
            margin-top: 0px;
            width: 44%;
        }
    }

    @@media(max-width: 430px) {


        .return {
            margin-left: 28%;
            margin-top: 0px;
            width: 44%;
            padding: 0.7em 55px;
        }
    }

    @@media(max-width: 380px) {
        .return {
            margin-left: 28%;
            margin-top: 0px;
            width: 44%;
            padding: 0.7em 49px;
        }
    }

    @@media(max-width: 320px) {
        .return {
            margin-left: 28%;
            margin-top: 0px;
            width: 45%;
            padding: 0.7em 38px;
        }
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 style="font-size: 26px; text-align: center; font-weight:bold; padding-top: 10px">Sửa Đơn Đặt Hàng</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDDH)

        <div class="form-group">
            Khách hàng:
            <div class="col-md-10">
                <input type="text" disabled name="MaKH" value="@Model.KHACHHANG.HoTenKH" />
            </div>
        </div>

        <div class="form-group">
            Đã Thanh Toán:
            <div class="col-md-10">
                @Html.EditorFor(model => model.DaThanhToan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DaThanhToan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tình Trạng Giao Hàng:
            <div class="col-md-10">
                @Html.EditorFor(model => model.TinhTrangGiaoHang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TinhTrangGiaoHang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Ngày Đặt:
            <div class="col-md-10">
                @String.Format("{0:dd/MM/yyyy}", @Model.NgayDat)
            </div>
        </div>

        <div class="clear"></div>
        <div class="form-group">
            Ngày Giao Hàng:

            <div class="col-md-10">
                <p>@String.Format("{0:dd/MM/yyyy}", Model.NgayGiao)</p>
                <input required type="date" name="NgayGiao" />
            </div>
        </div>

        <div class="form-group">
            Tổng Tiền
            <div class="col-md-10">
                <input type="text" disabled name="TongTien" value="@Model.ThanhTien" />
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
                <div style="text-align:center"><a class="btn" href="@Url.Action("DonDatHang","ChucNang")"> Trở về</a></div>
            </div>
        </div>
    </div>
}


