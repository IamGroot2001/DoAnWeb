@model VACTShop.Models.NHACUNGCAP

@{
    ViewBag.Title = "ThemNCC";
    Layout = "~/Views/Layout/Admin/_LayoutAdmin.cshtml";
}

<style>
    h2 {
        font-size: 26px;
    }

    input {
        color: #000000;
        outline: none;
        font-size: .9em;
        padding: 1em 3em 1em 1em;
        border: none;
        margin-bottom: 20px;
        margin-top: 10px;
        background: rgba(255, 255, 255, 0.85);
        width: 62%;
        color: #000;
        border-radius: 30px;
        font-weight: 400;
        font-family: 'Open Sans', sans-serif;
        letter-spacing: 1px;
        text-align: center
    }

        input:hover {
            transform: scale(1.2, 1);
        }

    label {
        margin-left: 25%;
    }

    .form-horizontal {
        margin-left: 8%;
        margin-top: 30px;
    }

    .btn {
        margin-left: 20%;
        margin-top: 2%;
        color: white;
        background: #d2527f;
        border: none;
        padding: .7em 20px;
        outline: none;
        width: 20%;
        font-size: 1em;
        cursor: pointer;
        letter-spacing: 1px;
        font-weight: 400;
        font-family: 'Open Sans', sans-serif;
        transition: 0.5s all;
        -webkit-transition: 0.5s all;
        -o-transition: 0.5s all;
        -moz-transition: 0.5s all;
        -ms-transition: 0.5s all;
        border-radius: 30px;
        float: left;
    }

        .btn:hover {
            color: #d2527f;
            background: white;
        }

    @@media(max-width: 1040px) {
        .return {
            margin-left: 8%;
            padding: 0.7em 90px;
            margin-top: 0px;
            width: 44%;
        }
    }

    @@media(max-width: 780px) {
        label {
            margin-left: 22%;
        }

        .return {
            margin-left: 8%;
            padding: 0.7em 60px;
            margin-top: 0px;
            width: 44%;
        }
    }

    @@media(max-width: 430px) {
        label {
            margin-left: 20%;
        }

        .return {
            margin-left: 8%;
            padding: 0.7em 37px;
            margin-top: 0px;
            width: 44%;
            padding: 0.7em 35px;
        }
    }

    @@media(max-width: 380px) {
        label {
            margin-left: 18%;
        }

        .return {
            margin-left: 6%;
            margin-top: 0px;
            width: 49%;
            padding: 0.7em 35px;
        }
    }

    @@media(max-width: 320px) {
        label {
            margin-left: 15%;
        }

        .return {
            margin-left: 6%;
            margin-top: 0px;
            width: 49%;
            padding: 0.7em 25px;
        }
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2 style="text-align: center; font-weight: bold; padding-top: 9px ">THÊM NHÀ CUNG CẤP</h2>
    <hr />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label style="margin-left: 40%">Tên Nhà Cung Cấp</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNCC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNCC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="margin-left: 44%">Địa Chỉ</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChiNCC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiaChiNCC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="margin-left: 42%">Số Điện Thoại</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SDTNCC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SDTNCC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Thêm" class="btn btn-default">
                <div style="text-align:center"><a class="btn" href="@Url.Action("DSNCC","ChucNang")"> Trở về</a></div>
            </div>           
            
        </div>
    </div>
}