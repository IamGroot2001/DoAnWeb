@model VACTShop.Models.SANPHAM

@{
    ViewBag.Title = "XoaSanPham";
    Layout = "~/Views/Layout/Admin/_LayoutAdmin.cshtml";
}

<style>
    .dl-horizontal {
        width: 60%;
        margin-top: 20px;
        margin-left: 20%;
        padding-left: 10%;
        font-size: 20px;
        border: none;
        box-shadow: 0px 5px 5px 2px #b0b0b0;
    }

    dt {
        color: black;
        margin: 20px 10px;
        font-size: 14px;
    }

    .form-actions {
        margin-top: 80px;
        margin-left: 18%;
        width: 100%;
    }

    .btn {
        margin-left: 8%;
        margin-top: 1%;
        color: white;
        background: #d2527f;
        border: none;
        padding: .7em 20px;
        outline: none;
        width: 20%;
        font-size: 1em;
        cursor: pointer;
        letter-spacing: 1px;
        font-weight: 400;
        font-family: 'Open Sans', sans-serif;
        transition: 0.5s all;
        -webkit-transition: 0.5s all;
        -o-transition: 0.5s all;
        -moz-transition: 0.5s all;
        -ms-transition: 0.5s all;
        border-radius: 30px;
        float: left;
    }

        .btn:hover {
            color: #d2527f;
            background: white;
        }

    @@media(max-width: 1040px) {
        .return {
            margin-left: 8%;
            padding: 0.7em 43px;
            margin-top: 0px;
            width: 20%;
        }
    }

    @@media(max-width: 780px) {
        label {
            margin-left: 22%;
        }

        .btn {
            margin-left: 2%;
            width: 25%;
        }

        .return {
            margin-left: 4%;
            padding: 0.7em 47px;
            margin-top: 0px;
            width: 28%;
        }
    }

    @@media(max-width: 430px) {
        label {
            margin-left: 20%;
        }

        .return {
            margin-left: 5%;
            margin-top: 0px;
            width: 29%;
            padding: 0.7em 25px;
        }
    }

    @@media(max-width: 380px) {
        label {
            margin-left: 18%;
        }

        .btn {
            margin-left: 2%;
            width: 25%;
        }

        .return {
            margin-left: 3%;
            margin-top: 0px;
            width: 31%;
            padding: 0.7em 24px;
        }
    }

    @@media(max-width: 320px) {
        label {
            margin-left: 15%;
        }

        .btn {
            margin-left: 2%;
            width: 30%;
        }

        .return {
            margin-top: 0px;
            width: 30%;
            padding: 0.7em 14px;
        }
</style>
<h1 style="text-align: center; font-size: 28px; font-weight: bold; color: red">Bạn Thật Sự Chắc Chắn Muốn Xóa Sản Phẩm Này?</h1>
<hr />
<div>
    <h2 style="text-align: center; font-size: 26px; font-weight: bold">Thông Tin Sản Phẩm</h2>
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm:
            @Html.DisplayFor(model => model.TenSP)
        </dt>

        <dt>
            Giá: @Html.DisplayFor(model => model.GiaBan)
        </dt>

        <dt>
            Mô tả: @Html.DisplayFor(model => model.MoTa)
        </dt>

        <dt>
            Ảnh: <img style="width:150px" src="~/Asset/img/@Html.DisplayFor(model => model.AnhBia)" alt="@Model.AnhBia" />
        </dt>

        <dt>
            Ngày cập nhật:@String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat)
        </dt>

        <dt>
            Số lượng tồn:   @Html.DisplayFor(model => model.SoLuongTon)
        </dt>


        <dt>
            Loại sản phẩm: @Html.DisplayFor(model => model.LOAISANPHAM.TenLSP)
        </dt>

        <dt>
            Nhà cung cấp:  @Html.DisplayFor(model => model.NHACUNGCAP.TenNCC)
        </dt>

    </dl>

    @using (Html.BeginForm())
    {
        @*<h4 style="color: red;border-style:double; background: #eee; text-align: center;line-height:33px">@ViewBag.error</h4>*@
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" />
            <div style="text-align:center"><a class="btn" href="@Url.Action("DSsanpham","ChucNang")"> Trở về</a></div>
        </div>
    }
</div>
