 @model VACTShop.Models.HOTRO
@{
    ViewBag.Title = "GOPY_CHITIET";
    Layout = "~/Views/Layout/Admin/_LayoutAdmin.cshtml";
}

<div>
    <h2 style="text-align: center; font-size: 32px; padding-top: 5px; font-weight: bold">CHI TIẾT BẢNG GÓP Ý </h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Họ Tên: ")
            @Html.DisplayFor(model => model.MaHoTen)
        </dt>

        <dt>
            @Html.DisplayName("Email: ")
            @Html.DisplayFor(model => model.Email)
        </dt>

        <dt>
            @Html.DisplayName("Góp Ý : ")
            @Html.DisplayFor(model => model.LyDo)
        </dt>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" />
            <div style="text-align:center"><a class="btn" href="@Url.Action("DSGOPY","ChucNang")"> Trở về</a></div>
        </div>
    }
</div>


<style>
    .dl-horizontal {
        width: 60%;
        margin-top: 60px;
        margin-left: 20%;
        padding-left: 10%;
        font-size: 20px;
        border: none;
        box-shadow: 0px 5px 5px 2px #b0b0b0;
    }

    dt, dd {
        color: black;
        margin: 20px 10px;
    }

    .form-actions {
        margin-top: 80px;
        margin-left: 18%;
        width: 100%;
    }

    .btn {
        margin-left: 8%;
        margin-top: 1%;
        color: white;
        background: #d2527f;
        border: none;
        padding: .7em 20px;
        outline: none;
        width: 20%;
        font-size: 1em;
        cursor: pointer;
        letter-spacing: 1px;
        font-weight: 400;
        font-family: 'Open Sans', sans-serif;
        transition: 0.5s all;
        -webkit-transition: 0.5s all;
        -o-transition: 0.5s all;
        -moz-transition: 0.5s all;
        -ms-transition: 0.5s all;
        border-radius: 30px;
        float: left;
    }

        .btn:hover {
            color: #d2527f;
            background: white;
        }

    .return {
        margin-left: 8%;
        color: white;
        background: #ea2858;
        border: none;
        padding: .7em 83px;
        outline: none;
        width: 20%;
        font-size: 1em;
        cursor: pointer;
        letter-spacing: 1px;
        font-weight: 400;
        font-family: 'Open Sans', sans-serif;
        transition: 0.5s all;
        -webkit-transition: 0.5s all;
        -o-transition: 0.5s all;
        -moz-transition: 0.5s all;
        -ms-transition: 0.5s all;
        border-radius: 30px;
        float: left;
    }

        .return:hover {
            color: #ea2858;
            background: white;
        }

    @@media(max-width: 1040px) {
        .return {
            margin-left: 8%;
            padding: 0.7em 43px;
            margin-top: 0px;
            width: 20%;
        }
    }

    @@media(max-width: 780px) {
        label {
            margin-left: 22%;
        }

        .btn {
            margin-left: 2%;
            width: 25%;
        }

        .return {
            margin-left: 4%;
            padding: 0.7em 47px;
            margin-top: 0px;
            width: 28%;
        }
    }

    @@media(max-width: 430px) {
        label {
            margin-left: 20%;
        }

        .return {
            margin-left: 5%;
            margin-top: 0px;
            width: 29%;
            padding: 0.7em 25px;
        }
    }

    @@media(max-width: 380px) {
        label {
            margin-left: 18%;
        }

        .btn {
            margin-left: 2%;
            width: 25%;
        }

        .return {
            margin-left: 3%;
            margin-top: 0px;
            width: 31%;
            padding: 0.7em 24px;
        }
    }

    @@media(max-width: 320px) {
        label {
            margin-left: 15%;
        }

        .btn {
            margin-left: 2%;
            width: 30%;
        }

        .return {
            margin-top: 0px;
            width: 30%;
            padding: 0.7em 14px;
        }
</style>
