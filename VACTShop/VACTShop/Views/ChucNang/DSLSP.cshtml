@using VACTShop.Models
@using PagedList.Mvc;
@model PagedList.PagedList<LOAISANPHAM>

@{
    ViewBag.Title = "DSLSP";
    Layout = "~/Views/Layout/Admin/_LayoutAdmin.cshtml";
}

@helper Truncate(string input, int lenght)
{if (input.Length < lenght)
    {
        @input }
    else
    {
        @input.Substring(0, lenght)<text>.....</text>}
}

<style>
    table {
        width: 100%;
    }

    img {
        width: 300px;
        height: 150px;
    }

    th {
        height: 50px;
        background: #f1828d;
        color: black;
        text-transform: uppercase;
    }

    td {
        text-align: center;
    }

    th, td {
        padding-left: 20px;
        padding-right: 10px;
        padding-top: 15px;
        padding-bottom: 20px;
    }

    tr {
        color: #777;
        font-weight: bold;
    }

        tr:hover {
            color: black;
            background-color: #ffe4e4;
            transition: 0.5s ease all;
        }


    @@media(max-width: 430px) {
        table {
            font-size: 10px;
        }

        .pagination {
            width: 95%;
            padding: 5px 20px;
            margin-left: 15px;
        }
    }

    @@media(max-width: 320px) {
        table {
            font-size: 8px;
        }

        .pagination {
            width: 95%;
            padding: 5px 20px;
            margin-left: 15px;
            font-size: 10px;
        }
    }

    .text {
        padding-top: 4px;
        margin-top: 10px;
        margin-bottom: 10px;
        margin-left: 20px;
        margin-right: 20px;
        font-weight: bold;
    }


    .icon {
        margin: 10px 0px;
        width: 30px;
        height: 30px;
        padding-left: 10px;
        border-radius: 50%;
        background-color: #a1a45b;
    }

    .pagination {
        position: relative;
        background: #fff;
        display: flex;
        padding: 10px 20px;
        border-radius: 50px;
        box-shadow: 0 5px 15px rgba(0,0,0,.2);
        text-align: center;
        justify-content: center
    }

        .pagination > li {
            margin: 0 5px;
            width: 50px;
            height: 50px;
            line-height: 50px;
            text-align: center;
        }

            .pagination > li > a {
                color: #777;
                font-weight: 600;
                border-radius: 50%;
                display: block;
            }

            .pagination > li:hover a,
            .pagination > li.active a {
                background: #333;
                color: white;
            }


    .tool > a:hover {
        text-decoration: none;
        color:white;
    }

    .page {
        text-align: center;
        justify-content: center;
        display: inline;
    }


    .ADD-Btn {
            margin-left: 40%;
            width: 18%;
            background: #f1828d;
            margin-top: 10px;
            margin-bottom: 10px;
            float: left;
            border-radius: 10px;
            transition: 0.5s ease all;
            border-radius: 10px;
            width: 190px;
            height: 80px;
            color: black;
        }

            .ADD-Btn:hover {
                background: #c44d56;
                color: white;
            }

            .ADD-Btn:hover .icon {
                background-color: #a1a45b;
            }

        .ADD-Btn p {
            float: left;
        }

    .ADD-Btn2 {
            margin-left: 3%;
            width: 20%;
            background: #f1828d;
            margin-top: 10px;
            margin-bottom: 10px;
            float: left;
            border-radius: 10px;
            transition: 0.5s ease all;
            width: 190px;
            height: 80px;
            color: black;
        }

            .ADD-Btn2:hover {
                background: #c44d56;
                color: white;
            }

            .ADD-Btn2:hover .icon {
                background-color: #090c5e;
            }

        .ADD-Btn2 p {
            float: left;
        }

    @@media(max-width: 1024px) {
        .ADD-Btn {
            width: 30%;
            margin-left: 35%
        }

        .ADD-Btn2 {
            width: 32%;
        }

        table {
            font-size: 10px;
        }

        th, td {
            padding-right: 0px;
            padding-left: 10px;
        }
    }

    @@media(max-width: 768px) {
        .ADD-Btn {
            width: 46%;
            margin-left: 27%;
        }

        .ADD-Btn2 {
            width: 47%;
            margin-left: 27%
        }

        table {
            font-size: 9px;
        }

        th, td {
            padding-right: 0px;
            padding-left: 5px;
        }
    }

    @@media(max-width: 430px) {
        .ADD-Btn {
            width: 55%;
            margin-left: 22%
        }

        .ADD-Btn2 {
            width: 55%;
            margin-left: 22%
        }

        table {
            font-size: 9px;
        }

        th, td {
            padding-right: 0px;
            padding-left: 5px;
        }
    }

    @@media(max-width: 380px) {
        .ADD-Btn {
            width: 65%;
            margin-left: 17%;
        }

        .ADD-Btn2 {
            width: 63%;
            margin-left: 18%
        }
    }

    @@media(max-width: 320px) {
        .ADD-Btn {
            width: 75%;
            margin-left: 11%;
        }

        .ADD-Btn2 {
            width: 75%;
            margin-left: 12%
        }

        table {
            font-size: 8px;
        }
    }
</style>

<h2 style="text-align:center;font-size: 24px;padding-top:5px; font-weight:bold">Danh Sách Loại Sản Phẩm</h2>

<a href="@Url.Action("ThemLSP","ChucNang")" class="ADD-Btn">
    <p class="text">THÊM LOẠI SẢN PHẨM</p>
</a>
<table class="table" border="1">
    <tr>
        <th>
            @Html.DisplayName("Mã Loại")
        </th>
        <th>
            @Html.DisplayName("Tên Loại")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLSP)
            </td>
            <td class="tool">
                @Html.ActionLink("Edit", "SuaLSP", new { id = item.MaLSP }) |
                @Html.ActionLink("Delete", "XoaLSP", new { id = item.MaLSP })
            </td>
        </tr>
    }

</table>

@section MenuTrangAdmin{
    <div class="page">
        @Html.PagedListPager(Model, page => Url.Action("DSLSP", new { page = page }))
    </div>
}

